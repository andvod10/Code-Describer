<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

    <Button
            android:text="@string/title_retrieve"
            android:layout_width="272dp"
            android:layout_height="72dp" android:id="@+id/idBtnRetrieve"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idFragmentRetrieve"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="@string/title_create"
            android:layout_width="272dp"
            android:layout_height="72dp" android:id="@+id/idBtnCreate"
            app:layout_constraintTop_toBottomOf="@+id/idBtnRetrieve" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
            android:id="@+id/scrollViewRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/idFragmentRetrieve" tools:layout_editor_absoluteX="0dp"
            android:layout_marginBottom="24dp">
        <LinearLayout
                android:id="@+id/linearLayoutRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        </LinearLayout>
    </ScrollView>
    <TextView
            android:id="@+id/idFragmentRetrieve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.401"/>

</androidx.constraintlayout.widget.ConstraintLayout>